generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid())
  studentCode String
  email       String  @unique
  password    String?
  name        String
  phone       String
  school      String
  isAdmin     Boolean @default(false)

  @@unique([school, studentCode])
  @@index([school, studentCode])
  @@index([email])
  @@map("users")
}
